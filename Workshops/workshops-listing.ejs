```{=html}
<%
// Populate categories
for (const item of items) {
    item.categories = [].concat(item.tags).concat(item.tools).concat(item.packages)
}

// Image properties
const imageAlign = 'left';
//const imageHeight = listing['image-height'];

fields=["title"]
%>
<div class="list quarto-listing-default">
<% for (const item of items) { %>
    <div class="quarto-post image-<%= imageAlign %>" <%= metadataAttrs(item) %>>
        <% if (fields.includes('image')) { %>
            <div class="thumbnail">
                <a href="<%- item.path %>" class="no-external">
                    <% if (item.image) { %>
                        <%= img(itemNumber, item.image, "thumbnail-image", item['image-alt']) %>
                    <% } else { %>
                        <%= imgPlaceholder(itemNumber, item.outputHref) %>
                    <% } %>
                </a>
            </div>
        <% } %>
        <div class="body">
            <% if (item.title) { %>
                <h3 class="no-anchor listing-title"><%= item.title %></h3>
                <div class="listing-subtitle"><a href="<%- item.materials %>">Lesson Materials</a></div>
            <% } %>
        <% if (item.tags) { %> 
        <div class="listing-categories listing-tags">
        Tags: <% for (const category of item.tags) { %>
        <div class="listing-category" onclick="window.quartoListingCategory('<%=category%>'); return false;"><%= category %></div>
        <% } %>
        </div>
        <% } %> 
        <% if (item.tools) { %> 
            <div class="listing-categories listing-tags">
            Tags: <% for (const category of item.tools) { %>
            <div class="listing-category" onclick="window.quartoListingCategory('<%=category%>'); return false;"><%= category %></div>
            <% } %>
            </div>
        <% } %> 
        <% if (item.prerequisites) { %>
            <div class="listing-prerequisites">
                <h4>Prerequisites</h4>
                <%- item.prerequisites %>
            </div>
        <% } %>
        </div>
        <div class="metadata"><a href="<%- item.path %>" class="no-external">
        <% if (fields.includes('date') && item.date) { %><div class="listing-date">`<%= item.date %>`{=html}</div><% } %>
        <% if (fields.includes('author') && item.author) { %><div class="listing-author"><%= item.author %></div><% } %>
        <% if (fields.includes('reading-time') && item['reading-time']) { %> <div class="listing-reading-time"><%= item['reading-time'] %></div> <% } %>
        </div>
    <% } %>
</div>
